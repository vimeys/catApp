/* pages/login_2/login_2.wxss */
.top{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 20rpx;
    color: #fff;
    width:750rpx;
    height:100rpx;
    background:rgba(0,146,190,1);
}
.top-text{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.top-text-chose{
    font-size:36rpx;
    font-weight: bold;
    display: flex;
    justify-content: center;
}
.top-text-text{
    font-size: 24rpx;
}
.brand_input{
    width: 100%;
    height: 0rpx;
    margin-bottom: 30rpx;

}
.brand_input input{
    width: 230rpx;
    height: 60rpx;
    border: 1px solid #00A79F;
    border-radius: 60rpx;
    font-size: 32rpx;
    padding-left: 20rpx;
    margin-left: 40rpx;
}
.custom{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 40rpx;
    padding-right: 40rpx;
    height: 120rpx;
}
.custom image{
    width: 60rpx;
    height: 60rpx;
}
.custom_input{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
    background-color: #fafafa;
    min-height: 240rpx;
}
.brand_select{
    /*display: inline-block;*/

    width: 240rpx;

    border-radius: 60rpx;
    height: 60rpx;
    position: relative;
    text-align: center;
    background: #fff;
    color:#00A79F;
    border: 1rpx solid #00A79F;
    line-height: 60rpx;
    font-size: 32rpx;
    margin-left: 10rpx;
    margin-bottom: 20rpx;
    margin-top: 30rpx;
}
.brand_select image{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top:-25rpx;
    right: -10rpx;
}
.list{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap;
    background-color: #fafafa;
    min-height: 240rpx;
}
.choose1 {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    /*width: 100%;*/
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.choose1 input{
    text-align: right;
    font-size: 28rpx;
}



/*弹窗*/
.showModel{
    width: 100%;
    height: 100%;
}
.model{
    width: 100%;
    /*height: 100%;*/
    position: fixed;
    bottom:0;
    left: 0;
    display: flex;
    flex-direction: column;
    z-index: 10;
    background: #fff;
}
.model_title{
    display: flex;
    flex-direction: row;
    align-content: center;
    height: 100rpx;
    line-height: 100rpx;
}

.model_title view:first-child{
    width: 700rpx;
    text-align: center;
}
.pop-goods-close{
    width: 36rpx;
    height: 36rpx;
    flex: 1;
    background:url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
    background-size: 36rpx auto;
    align-self: flex-start;
    margin-top: 10rpx;
}
.di{
    width: 100%;
    height: 100%;
    position: fixed;
    top:0;
    left: 0;
    z-index: 5;
    background: rgba(0,0,0,.5);
}
.item{
    width: 100%;
    display: flex;
    margin-top: 50rpx;
}
.num{
    width: 100rpx;
    text-align: center;
    margin-top: 10rpx;
}
.goods{
    width: 650rpx;
    margin-bottom: 20rpx;
}
.goods_list{
    display: inline-block;
    width: 240rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    color:#989898;
    height: 60rpx;
    overflow: hidden;
    text-align: center;
    line-height: 60rpx;
    border: 1px solid #989898;
    border-radius: 60rpx;
}
.goods_list:nth-child(2n+1){
    margin-right: 60rpx;
}
.choose{
    border: 1rpx solid #00a79e;
    color:#fff;
    background: #00a79e;
}
.fix{
    margin-top: 45rpx;
    width: 100%;
    height: 100rpx;
    background: #00A79F;
    color:#fff;
    font-size: 40rpx;
    text-align: center;
    line-height: 100rpx;
}
.bottom{
    margin-top: 82rpx;
    width: 670rpx;
    background-color: #0092BE;
    color: #fff;
    letter-spacing: 16rpx;
}