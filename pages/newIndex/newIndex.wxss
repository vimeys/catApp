/* pages/newIndex/newIndex.wxss */
.slide-image {
    width: 100%;
    height: 420rpx;
}
/*六大板块*/
.item{
    display: flex;
    flex-wrap: wrap;
    /* margin-bottom: 20rpx; */
    margin-top: 20rpx;
    border-bottom: 10rpx solid #fafafa;
}
.items{
    width: 33.333333333%;
    margin-bottom: 20rpx;
}
.img{
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.items_image{
    width: 84rpx;
    height: 84rpx;
    margin-bottom: 5rpx;
}
.text{
    font-size: 24rpx;
}

/*众筹活动*/
.active{
    z-index: 12;
    width: 100%;
    display: flex;
    flex-direction: row;
    height: 400rpx;
    border-bottom-left-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
}
.active_border{
    border-left: 1rpx solid #eee;
}
.left,.right{
    flex: 1;
}
.active_title_TBD,.active_title_promotion{
    font-size: 48rpx;
    padding-left: 50rpx;
    text-align: left;
    margin-bottom: 10rpx;
    font-weight: bold;
    padding-top: 20rpx
}
.active_title_TBD{
    color:#0DD1E3;
}
.active_title_promotion{
    color:#EB371F;
}
.active_text{
    font-size: 24rpx;
    text-align: left;
    padding-left: 50rpx;
    margin-bottom: 20rpx;
}
.image .TBD_image,.promotion_image{
    width: 300rpx;
    height: 200rpx;
}
.image{
    text-align: center;
    margin-bottom: 30rpx;
    /*display: flex;*/
    /*justify-items: center;*/
    /*align-items: center;*/
}

/*推荐*/
.recommend{
    z-index: 1;
    width: 100%;
    /*padding-top: 50rpx;*/
    background: #EA4736;
    /*position: relative;*/
    /*margin-top: -10rpx;*/
}
.recommend_title{
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color:#fff;
    font-size: 40 rpx;
}
.goods{
   width: 96%;
    margin: 0 auto;
    background: #fff;
    margin-top: 20rpx;
}
.image .image_name{
    width: 100%;
    height: 400rpx;
}
.list{
    display: flex;
    flex-direction: column;
    padding-bottom: 10rpx;
}
.list_item{
    display: flex;
    justify-content: space-between;
}
.goods_name{
    /*text-overflow:ellipsis;*/
    /*text-overflow: ;*/
    color:#333;
    width: 400rpx;
    text-overflow: clip;
    font-size:40rpx;
    height: 50rpx;
    overflow:hidden;
    padding-left: 10rpx;
    font-weight: bold;
}
.goods_news{
    width: 400rpx;
    text-overflow: clip;
    font-size: 26rpx;
    line-height: 50rpx;
    overflow:hidden;
    padding-left: 10rpx;
    color:#666;
}
.goods_price{
    font-size: 30rpx;
    color:#E64126;
    margin-right: 10rpx;
}
.goods_Btn{
    width: 200rpx;
    height: 52rpx;
    line-height: 52rpx;
    margin-right: 10rpx;
    text-align: center;
    background: #EA4736;
    color: #fff;
    font-size: 30rpx;
}
.footer{
    width: 96%;
    margin: 0 auto;
    margin-top: 20rpx;
    background: #fff;
    padding-bottom: 50rpx;
}
.footer_title{
    margin-top: 40rpx;
    padding-top: 20rpx;
    margin-bottom: 50rpx;
    width: 100%;
    padding-left: 20rpx;
    color:#000;
    font-weight: bold;
}
.footer_list{
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}
.footer_list view{
    width: 33.33333333%;
    text-align: center;
}
.footer_image{
    width:170rpx;
    height: 90rpx;
    margin-bottom: 10rpx;
}
