/* pages/carload/carload.wxss */
/*搜索框*/
.search{
    width: 100%;
    height:90rpx;
    display: flex;
    flex-direction: row;
}
.search_input{
    width:650rpx;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    /*outline:#00FF00 dotted thick;*/
}
.search_input input{
    width: 620rpx;
    height: 60rpx;
    margin: 0 atuo;
    border: 1px solid #cccccc;
    text-align: center;
    border-radius: 10rpx;
    background: #fafafa;
}
.btn{
    line-height: 90rpx;
    flex: 1;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    text-align: center;
    color:#ccc;}


/*主体*/
.main{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.list{
    width: 180rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    background: #fafafa;
}
.li{
    width: 100%;
    /*padding-left: 15rpx;*/
    text-align: center;
    font-size: 26rpx;
    border-left: 7rpx solid #fafafa;
    margin-top: 30rpx;
    padding: 10rpx 0;
}
.active{
    font-size: 30rpx;
    font-weight:bold;
    border-left: 7rpx solid #EA4736;
    color:#EA4736;
}

/*商品*/
.goods_list{
    flex: 1;
}
.goods{
    display: flex;
    flex-direction: row;
    padding-left: 20rpx;
}
.goods_image image{
    width: 200rpx;
    height: 200rpx;
}
.goods_news{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    flex: 1;
}
.goods_name{
    font-size: 36rpx;
    padding: 20rpx 0 0 0;
    line-height: 40rpx;
    color:#333;
    width: 250rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: 500;
}
.goods_shop{
    line-height: 30rpx;
    font-size: 26rpx;
    color:#EA4736;
    margin-bottom: 70rpx;
}
.goods_prices{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: flex-end;
    font-weight: 300;
    padding-bottom: 5rpx;
    border-bottom: 1px solid #eee;
}
.goods_price{
    font-size: 30rpx;
    color:#EA4736;
    margin-right: 100rpx;
}
.goods_num{
    font-size: 22rpx;
    color:#666;
    float: right;
}
